<h2>Insert Rating</h2>
      <form action="/insert_rating" method="post">
        <input list="ratings" name="rating">
        <datalist id="ratings">
          <option value="5">
          <option value="4">
          <option value="3">
          <option value="2">
          <option value="1">
        </datalist>
        <input type="submit">
      </form>


      <div>
        <p><%= @recipe.recipe_steps %></p>
      </div>


<h2>Comments</h2>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

  <% @recipe.comments.each do |comment| %>
  <tr>
    <td>
    <%= comment.commenter.username %>
    </td>

    <td>
      <%= comment.message %>
    </td>

    <td>
      <%= comment.created_at %>
    </td>
  </tr>
  
  <% end %>
</table>

<h3>Add a new comment</h3>

<form action="/insert_comment_record" method="post">
  <input id="browser_recipe_id" type="hidden" value="<%= @recipe.id %>" name="input_recipe_id">
  <label for="browser_comment">Comment</label>
  <textarea id="browser_comment" name="input_message" placeholder="Enter a comment..."></textarea>

  <button>Add comment</button>
</form>

</body>

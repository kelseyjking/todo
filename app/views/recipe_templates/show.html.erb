<head>
    <meta charset="UTF-8">
    <!-- Connect Font Awesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/js/all.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=PT+Serif|Rufina:700" rel="stylesheet">
    <title>The Food Chronicles</title>
    <style>
      body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #7db6a4;
        opacity: 1;
        background-image:  radial-gradient(#ffffff 0.5px, transparent 0.5px), radial-gradient(#ffffff 0.5px, #7db6a4 0.5px);
        background-size: 20px 20px;
        background-position: 0 0,10px 10px;
        display: flex;
        justify-content: center;
      }
  
      .banner-image {
        width: 160px;
        height: 160px;
        object-fit: cover;
        border-radius: 128px;
      }
  
      .thumbnail {
        width: 48px;
        height: 48px;
        border-radius: 48px;
        object-fit: cover;
      }
  
      .name {
        Font-Family: 'Rufina', Serif;
        Font-Size: 48px;
        color: #0d413e;
        display: flex;
        justify-content: center;
      }
  
      .social-icons a {
        Font-Family: 'PT Serif', Serif;
        Font-Size: 18px;
        color: #fffffe;
        text-decoration: none
      }
  
      .link {
        Font-Family: 'PT Serif', Serif;
        Font-Size: 18px;
        background-color: #ffffff;
        display: flex;
        align-items: center;
        padding: 5px;
      }
  
      .link a {
        Font-Family: 'PT Serif', Serif;
        Font-Size: 18px;
        color: #0d413e;
        text-decoration: none;
        text-align: center;
        flex-grow: 1;
      }
  
      .items {
        display: flex;
        flex-direction: column;
        gap: 30px;
        max-width: 650px;
        flex-grow: 1;
      }
  
      .banner {
        display: flex;
        justify-content: center;
      }
  
      .social-icons {
        display: flex;
        justify-content: space-around;
      }

      
    </style>
</head>


<body>

  <nav>
      <ul>

        <div class="icon-bar">
          <a class="active" href="/"><i class="fa fa-home"></i></a>
          <a href="#"><i class="fa fa-search"></i></a>
        </div>
        <div>
                <a href="/user_sign_up">Sign Up</a>
        </div>
              <div>
                <a href="/user_sign_in">Sign In</a>
        </div>
        <div>
                <a href="/user_sign_out">Sign Out</a>
        </div>
        <div>
                <%= if session.has_key?(:username) then "User: #{session.fetch(:username)}" end %>
        </div>
      </ul>
  </nav>


      <div class="items">
      <div class="banner">
        <img src="<%= @recipe.image %>" class="banner-image">
      </div>

      <div class="name">
        <p><%= @recipe.name %></p>
      </div>
    
      <div class="social-icons">
        <i class="fa-brands fa-github"></i>
        <a href="/recipes" target="_blank">
          Recipes - Change icon
        </a>
      
        <i class="fa-brands fa-linkedin"></i>
        <a href="/chefs" target="_blank">
          Chefs
        </a>
      
        <i class="fa-brands fa-twitter"></i>
        <a href="/ingredients" target="_blank">
          Ingredients
        </a>
      
      </div>


<h2>Comments</h2>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

  <% @recipe.comments.each do |comment| %>
  <tr>
    <td>
      "I need to be turned into comment.commenter.username later"
    </td>

    <td>
      <%= comment.message %>
    </td>

    <td>
      <%= comment.created_at %>
    </td>
  </tr>
  
  <% end %>
</table>

<h3>Add a new comment</h3>

<form action="/insert_comment_record" method="post">
  <input id="browser_recipe_id" type="hidden" value="<%= @recipe.id %>" name="input_recipe_id">
  <label for="browser_comment">Comment</label>
  <textarea id="browser_comment" name="input_message" placeholder="Enter a comment..."></textarea>

  <button>Add comment</button>
</form>

</body>
